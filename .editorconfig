root = true

[*]
charset = utf-8                 # 字符集
indent_style = space            # tab | space
indent_size = 2                 # 缩进
end_of_line = lf                # lf | cr |crlf
insert_final_newline = true     # 末尾空行
trim_trailing_whitespace = true # 自动切掉首尾空格

[*.md]                             # md文件
trim_trailing_whitespace = false   # 不自动切掉首尾空格
